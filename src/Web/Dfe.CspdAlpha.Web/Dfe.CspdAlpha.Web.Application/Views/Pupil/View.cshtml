@using Dfe.CspdAlpha.Web.Application.Models.ViewModels.Pupil
@model ViewPupilViewModel
@{
    var phase = Model.CheckingWindow.ToString().ToLower().Substring(0, 3);
    ViewData["Title"] = $"View {Model.PersonLowercase} {Model.MatchedPupilViewModel.PupilViewModel.FullName}";
    ViewBag.ContentClass = "app-detail-page-main";
}

@section BackLink
{
    <a class="govuk-back-link" asp-controller="Pupil" asp-action="Index">Back</a>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l govuk-!-margin-bottom-3">@Html.Raw(ViewBag.Title)</h1>
    </div>
</div>
<partial name="./Partial/_PupilView_@phase" model="@Model.MatchedPupilViewModel" />
