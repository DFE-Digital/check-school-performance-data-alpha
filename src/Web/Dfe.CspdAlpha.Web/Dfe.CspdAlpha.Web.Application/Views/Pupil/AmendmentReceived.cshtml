@model string
@{
    ViewData["Title"] = "Requested amendment received";
}

@section BackLink
{
    &nbsp;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full app-align-right govuk-!-margin-bottom-2">
        <a class="print-link" href="javascript:window.print()">Print</a>
    </div>
</div>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <div class="govuk-panel govuk-panel--confirmation">
            <h1 class="govuk-panel__title">
                @ViewBag.Title
            </h1>
            <div class="govuk-panel__body">
                Your reference number<br><strong>@Model</strong>
            </div>
        </div>
    </div>
</div>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h2 class="govuk-heading-l">What happens next</h2>
        <p class="govuk-body">Your requested amendment has now been referred to the helpdesk team.</p>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <p class="govuk-body">
            <a asp-controller="TaskList" asp-action="Index">View task list</a>
        </p>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <p class="govuk-body">
            <a asp-controller="Amendments" asp-action="Index">View all requestedbb amendments</a>
        </p>
    </div>
</div>
