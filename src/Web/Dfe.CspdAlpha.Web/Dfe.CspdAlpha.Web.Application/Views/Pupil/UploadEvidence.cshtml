@using Dfe.CspdAlpha.Web.Application.Models.ViewModels.Pupil
@model UploadEvidenceViewModel
@{
    ViewData["Title"] = "Upload evidence for " + Model.AddPupilViewModel.FullName;
    ViewBag.ContentClass = "app-detail-page-main";
    string referer = Context.Request.Headers["Referer"].ToString();
}

@section BackLink
{

    @if (referer.IndexOf("AddEvidence") > -1)
    {
        <a class="govuk-back-link" asp-controller="Pupil" asp-action="AddEvidence">Back</a>
    }
    else
    {
        <a class="govuk-back-link" asp-controller="Amendments" asp-action="Index">Back</a>
    }

}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-l govuk-!-margin-bottom-3">@ViewBag.Title</h1>
    </div>

    <div class="govuk-grid-column-full">
        <details class="govuk-details govuk-!-font-size-16" data-module="govuk-details">
            <summary class="govuk-details__summary">
                <span class="govuk-details__summary-text">
                    View pupil details
                </span>
            </summary>
            <div class="govuk-details__text">
                <partial name="_PupilDetails" model="@Model.AddPupilViewModel" />
            </div>
        </details>
    </div>

    <div class="govuk-grid-column-full">
        <p class="govuk-body">Lorem ipsum...</p>
    </div>
</div>

<form method="post" id="upload-form" enctype="multipart/form-data">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds" id="app-upload__files-container">
            <div class="govuk-form-group app-upload__element">
                <label class="govuk-label" asp-for="EvidenceFiles">
                    Upload file
                </label>
                <input class="govuk-file-upload"  asp-for="EvidenceFiles" type="file">
            </div>
        </div>
        <div class="govuk-grid-column-two-thirds">
                <button class="govuk-button govuk-button--secondary" id="upload-button">Add file</button>
        </div>
    </div>
     <div class="govuk-grid-row">
         <div class="govuk-grid-column-two-thirds">
             <ul class="govuk-list govuk-!-font-size-16 " id="upload-file-list">

             </ul>
         </div>
     </div>
     <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <input type="submit" class="govuk-button" data-module="govuk-button" value="Continue" id="upload-button-next"/>
        </div>
    </div>
</form>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <a asp-controller="TaskList" asp-action="Index" class="app-modal__cancel-link">Cancel amendment</a>
    </div>
</div>

<partial name="_CancelModalContent"/>
<script webpack-src="submit-evidence"></script>
