@using Dfe.CspdAlpha.Web.Application.Models.Common
@model PupilDetails

    <dl class="govuk-summary-list app-summary-list app-summary-list--70">
        @if (Model.KeyStage == Keystage.KS5)
        {
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    ULN (Unique Learner Number)
                </dt>
                <dd class="govuk-summary-list__value">
                    @Model.Uln
                </dd>
            </div>
        }
        else
        {
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    UPN (Unique Pupil Number)
                </dt>
                <dd class="govuk-summary-list__value">
                    @Model.Upn
                </dd>
            </div>
        }
        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
                First name
            </dt>
            <dd class="govuk-summary-list__value">
                @Model.ForeName
            </dd>
        </div>
        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
                Last name
            </dt>
            <dd class="govuk-summary-list__value">
                @Model.LastName
            </dd>
        </div>
        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
                Date of birth
            </dt>
            <dd class="govuk-summary-list__value">
                @Model.DateOfBirth.UtcDateTime.ToString("dd/MM/yyyy")
            </dd>
        </div>
        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
                Age
            </dt>
            <dd class="govuk-summary-list__value">
                @Model.Age
            </dd>
        </div>
        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
                Gender
            </dt>
            <dd class="govuk-summary-list__value">
                @Model.Gender
            </dd>
        </div>
    </dl>
