@using Dfe.CspdAlpha.Web.Application.Models.ViewModels.RemovePupil
@using Dfe.Rscd.Web.ApiClient
@model ReasonViewModel

@foreach (var reason in Model.ReasonsKs5)
{
    <div class="govuk-radios__item">
        <input type="radio" asp-for="SelectedReasonCode" id="SelectedReason-@reason.Key" value="@reason.Key" class="govuk-radios__input" />
        <label class="govuk-label govuk-radios__label" for="SelectedReason-@reason.Key">
            @reason.Value
        </label>
    </div>
}
