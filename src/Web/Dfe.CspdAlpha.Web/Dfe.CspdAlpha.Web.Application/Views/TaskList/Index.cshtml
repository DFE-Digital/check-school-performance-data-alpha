@using Dfe.CspdAlpha.Web.Application.Models.ViewModels
@model TaskListViewModel
@{
    ViewBag.Title = "Task list";
    ViewBag.ContentClass = "app-detail-page-main";
}

@section BackLink
{
    <a class="govuk-back-link" asp-controller="Home" asp-action="Index">Back to homepage</a>
}

<partial name="_CheckDataNavigation" model="@Model.CheckDataNavigationModel" />

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-l govuk-!-margin-bottom-3">@ViewBag.Title</h1>
    </div>

    <div class="govuk-grid-column-full">
        <details class="govuk-details govuk-!-font-size-16" data-module="govuk-details">
            <summary class="govuk-details__summary">
                <span class="govuk-details__summary-text">
                    View school details
                </span>
            </summary>
            <div class="govuk-details__text">
                <partial name="_SchoolDetails" model="@Model.SchoolDetails" />
            </div>
        </details>
    </div>
    @if (Model.LateCheckingPhase)
    {
        <div class="govuk-grid-column-three-quarters">
            <p class="govuk-body">Key stage 4 Late results</p>
        </div>
    }
    else
    {
        <div class="govuk-grid-column-three-quarters">
            <p class="govuk-body">Key stage 4 June checking exercise</p>
        </div>
    }
    <div class="govuk-grid-column-three-quarters">
        <p class="govuk-body">@Model.GetLeadText()</p>
    </div>
    <div class="govuk-grid-column-one-quarter app-align-right govuk-!-padding-bottom-4">
        <a class="print-link" href="javascript:window.print()">Print</a>
    </div>

    <div class="govuk-grid-column-full">
        <ol class="app-task-list">
            <li>
                <h2 class="app-task-list__section">@Model.ReviewedHeader</h2>
                <ul class="app-task-list__items">
                    <li class="app-task-list__item">
                        <span class="app-task-list__task-name"><a asp-controller="School">School performance@(Model.LateCheckingPhase ? " summary" : String.Empty)</a></span>
                        <span class="app-task-list__tag">@(Model.ReviewChecked ? Model.ReviewedCopy : Model.NotReviewedCopy)</span>
                    </li>
                    <li class="app-task-list__item">
                        <span class="app-task-list__task-name"><a asp-controller="Pupil">Pupil list</a></span>
                        <span class="app-task-list__tag">@(Model.ReviewChecked ? Model.ReviewedCopy : Model.NotReviewedCopy)</span>
                    </li>
                    <li class="app-task-list__item app-task-list__item-review">
                        <span class="app-task-list__task-name">View data</span>
                        @if (Model.ReviewChecked)
                        {
                            <span class="app-task-list__tag">Completed</span>
                        }
                        else
                        {
                            <span class="app-task-list__description">
                                Click to confirm you have viewed the data
                            </span>
                            <form asp-action="Review" method="post">
                                <input type="submit" class="govuk-button app-task-list__cta" data-module="govuk-button" value="View" />
                            </form>
                        }
                    </li>
                </ul>
            </li>
            <li>
                <h2 class="app-task-list__section">2. Request amendments</h2>
                <ul class="app-task-list__items">
                    @if (!Model.ReviewChecked && Model.LateCheckingPhase)
                    {
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">Request to add results data</span>
                            <span class="app-task-list__tag">Cannot start yet</span>
                        </li>
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">Request to amend/remove results data</span>
                            <span class="app-task-list__tag">Cannot start yet</span>
                        </li>
                    }
                    else if (!Model.ReviewChecked)
                    {
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">Request to add a pupil</span>
                            <span class="app-task-list__tag">Cannot start yet</span>
                        </li>
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">Request to remove an incorrect pupil</span>
                            <span class="app-task-list__tag">Cannot start yet</span>
                        </li>
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">Request to remove a pupil from school measures</span>
                            <span class="app-task-list__tag">Cannot start yet</span>
                        </li>
                    }
                    else if (Model.LateCheckingPhase)
                    {
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name"><a asp-controller="Results" asp-action="Add">Request to add results data</a></span>
                            <span class="app-task-list__tag">Cannot start yet</span>
                        </li>
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name"><a asp-controller="Results" asp-action="AmendReason">Request to amend/remove results data</a></span>
                            <span class="app-task-list__tag">Cannot start yet</span>
                        </li>
                    }
                    else
                    {
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name"><a asp-controller="Pupil" asp-action="Add">Request to add a pupil</a></span>
                        </li>
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name"><a asp-controller="Pupil" asp-action="Remove">Request to remove an incorrect pupil</a></span>
                            <span class="app-task-list__tag">Cannot start yet</span>
                        </li>
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name"><a asp-controller="Pupil" asp-action="RemoveFromResults">Request to remove a pupil from school measures</a></span>
                            <span class="app-task-list__tag">Cannot start yet</span>
                        </li>
                    }
                </ul>
            </li>
            <li>
                <h2 class="app-task-list__section">3. Confirm data</h2>
                <ul class="app-task-list__items">
                    @if (!Model.ReviewChecked)
                    {
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">Confirm data</span>
                            <span class="app-task-list__tag">Cannot start yet</span>
                        </li>
                    }
                    else if (!Model.DataConfirmed)
                    {
                        <li class="app-task-list__item app-task-list__item-review">
                            <span class="app-task-list__task-name">Click to confirm data</span>
                            <form asp-action="ConfrimData" method="post">
                                <input type="submit" class="govuk-button app-task-list__cta" data-module="govuk-button" value="Confirm" />
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">Confirm data</span>
                            <span class="app-task-list__tag">Confirmed</span>
                        </li>
                    }
                </ul>
            </li>
        </ol>
    </div>
</div>

